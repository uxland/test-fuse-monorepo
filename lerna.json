    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "ignoreChanges": ["argos/*/test/**", "backend/*/test/**", "professional-portal/*/test/**", "**/*.md", "**/*.mdx"],
    "command": {
        "create": {
            "license": "UNLICENSED"
        },
        "bootstrap": {},
